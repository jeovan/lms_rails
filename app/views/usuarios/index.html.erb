<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table class="table">
  <thead>
    <tr>
      <th>E-mail</th>
      <th>Perfil</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.email %></td>
        <td><%= usuario.perfil.nome %></td>
        <td><%= link_to( usuario, class:"btn btn-info btn-icon align-middle" )do %>
          <span data-feather="eye"></span>
        <% end %>
        <%= link_to(edit_usuario_path(usuario), class:"btn btn-warning  btn-icon") do %>
          <span data-feather="edit"></span>
        <% end %>
        <%= link_to(usuario, class:"btn-delete btn btn-danger  btn-icon") do %>
         <span data-feather="trash"></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<form id="form_delete" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :_method,'delete' %>
</form>
<%= link_to(new_usuario_path, class:"btn btn-success  btn-icon") do %>
  <span data-feather="plus"></span>
<% end %>

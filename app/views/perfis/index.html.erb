<p id="notice"><%= notice %></p>

<h1>Perfis</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfis.each do |perfi| %>
      <tr>
        <td><%= perfi.nome %></td>
        <td><%= perfi.descricao %></td>
        <td><%= link_to 'Show', perfi %></td>
        <td><%= link_to 'Edit', edit_perfi_path(perfi) %></td>
        <td><%= link_to 'Destroy', perfi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Perfi', new_perfi_path %>
